<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/div_container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@drawable/account"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_list_ruangan_kosong_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_light_font"
                android:gravity="center|left"
                android:text="Nama ruangan"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_list_ruangan_kosong_lokasi"
                android:layout_width="match_parent"
                android:fontFamily="@font/manrope_light_font"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Lokasi ruangan"
                android:textColor="@android:color/black"
                android:textSize="15dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:id="@+id/iv_status_ruangan"
            android:src="@drawable/account"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAbuAbu"/>

</LinearLayout>