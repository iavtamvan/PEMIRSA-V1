<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.DetailPengurusActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/div_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_detail_pengurus"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:src="@android:drawable/ic_search_category_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_detail_pengurus_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_light_font"
                        android:text="ITU TEAM"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_detail_pengurus_jabatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope_light_font"
                        android:text="Komunitas"
                        android:textColor="@color/colorHijau"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/tv_ovals"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_detail_pengurus_prodi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/manrope_light_font"
                                android:text="Ade Fajr Ariav"
                                android:textColor="@android:color/black"
                                android:textSize="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/tv_ovals"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_detail_pengurus_nama_organisasi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:fontFamily="@font/manrope_light_font"
                                android:text="Khoirul Huda"
                                android:textColor="@android:color/black"
                                android:textSize="10dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|right"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/manrope_light_font"
                            android:text="Status Ke-organisasian"
                            android:textColor="@android:color/black"
                            android:textSize="8dp" />

                        <Button
                            android:id="@+id/btn_status_pengurus"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_bg_aktif"
                            android:fontFamily="@font/manrope_light_font"
                            android:text="Aktif"
                            android:textColor="@android:color/white" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAbuAbu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/iv_detail_pengurus_ktm"
                    
                    android:scaleType="fitXY"
                    android:src="@drawable/error_image"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAbuAbu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/div_collaps_info_pengurus"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope_light_font"
                        android:text="Info Pengurus"
                        android:textColor="@android:color/black"
                        android:textSize="10dp" />

                    <ImageView
                        android:id="@+id/iv_detail_pengurus_collaps"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/info" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/div_container_detail_pengurus">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:text="Email"
                                android:textColor="@android:color/black"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_detail_pengurus_email"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="No Hp pengurus"
                                android:textColor="@color/colorAbuAbuGelap"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:text="Telepon"
                                android:textColor="@android:color/black"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_detail_pengurus_telepon"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="No Hp pengurus"
                                android:textColor="@color/colorAbuAbuGelap"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:text="Persetujuan"
                                android:textColor="@android:color/black"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_detail_pengurus_persetujuan"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="Disetujui"
                                android:textColor="@color/colorAbuAbuGelap"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:text="Token Anggota"
                                android:textColor="@android:color/black"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_detail_pengurus_token"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="Disetujui"
                                android:textStyle="italic"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>d
    </ScrollView>

</LinearLayout>