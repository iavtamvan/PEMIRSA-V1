                            android:id="@+id/iv_detail_penggunaan_ruangan"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama Ruangannya"
                                android:id="@+id/tv_detail_penggunaan_ruangan_nama"
                                android:fontFamily="@font/manrope_light_font"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/tv_ovals"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_detail_penggunaan_ruangan_nama_organisasi"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:text="Nama Organisasi"
                                    android:textColor="@android:color/black"
                                    android:textSize="10dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="bottom|right"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:text="Status Penggunaan"
                                    android:textColor="@android:color/black"
                                    android:textSize="8dp" />

                                <Button
                                    android:id="@+id/btn_detail_penggunaan_ruangan_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:background="@drawable/btn_bg_aktif"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:text="Aktif"
                                    android:textColor="@android:color/white" />

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAbuAbu"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/people_anggotas" />

                            <TextView
                                android:id="@+id/tv_detail_penggunaan_ruangan_target_peserta"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/manrope_light_font"
                                android:gravity="center"
                                android:text="Target Peserta\n 2000"
                                android:textColor="@android:color/black"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!--<LinearLayout-->
