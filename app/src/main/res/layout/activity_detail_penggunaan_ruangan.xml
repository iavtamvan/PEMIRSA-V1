                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tv_detail_penggunaan_ruangan_nama_acara"
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="Nama acara"
                                    android:textColor="@color/colorAbuAbuGelap"
                                    android:textSize="10dp" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_delete_black_24dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:text="Hari dan Tanggal (mulai)"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tv_detail_penggunaan_ruangan_hari_tanggal_mulai"
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="hari tanggal mulai"
                                    android:textColor="@color/colorAbuAbuGelap"
                                    android:textSize="10dp" />

                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_delete_black_24dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|left"
                                    android:text="Hari dan Tanggal (selesai)"
                                    android:textColor="@android:color/black"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:id="@+id/tv_detail_penggunaan_ruangan_hari_tanggal_selesai"
                                    android:layout_width="match_parent"
                                    android:fontFamily="@font/manrope_light_font"
                                    android:layout_height="match_parent"
                                    android:gravity="bottom"
                                    android:text="No Hp pengurus"
                                    android:textColor="@color/colorAbuAbuGelap"
                                    android:textSize="10dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:scaleType="fitXY"
                        android:id="@+id/iv_detail_penggunaan_ruangan_fotopj"
                        android:src="@drawable/error_image"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_delete_black_24dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:fontFamily="@font/manrope_light_font"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:text="Deskripsi Acara"
                            android:textColor="@android:color/black"
                            android:textSize="13dp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_detail_penggunaan_ruangan_deskripsi_acara"
                            android:layout_width="match_parent"
                            android:fontFamily="@font/manrope_light_font"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:text="No Hp pengurus"
                            android:textColor="@color/colorAbuAbuGelap"
                            android:textSize="10dp" />

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/manrope_light_font"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginTop="8dp"
                android:text="Info Berkas"
                android:textColor="@android:color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:text="File Permohonan"
                                android:textColor="@android:color/black"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_detail_penggunaan_ruangan_file_permohonan"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="No Hp pengurus"
                                android:textColor="@color/colorAbuAbuGelap"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_delete_black_24dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:text="Penggunaan Ruangan"
                                android:textColor="@android:color/black"
                                android:textSize="13dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/tv_detail_penggunaan_ruangan_token"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/manrope_light_font"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="token"
                                android:textColor="@android:color/holo_red_light"
                                android:textSize="10dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>


